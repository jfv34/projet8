<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCE7E5E5"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_main_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

        <EditText
            android:id="@+id/test_property_et"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/test_adding_property_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test insert new property" />

        <Button
            android:id="@+id/test_suppress_property_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test suppress property" />

        <Button
            android:id="@+id/test_replace_fragment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test replace fragment)" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>