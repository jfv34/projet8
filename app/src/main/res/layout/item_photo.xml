<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/item_photo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/detail_item_photo_iv"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/detail_item_photo_description_tv"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />
        <TextView
            android:layout_marginEnd="16dp"
            android:textStyle="italic"
            android:textColor="#FFFFFF"
            android:id="@+id/detail_item_photo_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/detail_item_photo_iv"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@id/detail_item_photo_iv"
            app:layout_constraintEnd_toEndOf="@id/detail_item_photo_iv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>