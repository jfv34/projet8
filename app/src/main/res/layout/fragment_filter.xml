<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/bottomScreen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/fragment_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.chip.ChipGroup
                    android:layout_marginTop="@dimen/margin_small"
                    android:id="@+id/fragment_filter_chipgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/fragment_filter_type_0_chip"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:padding="10dp"
                        android:visibility="invisible"
                        app:chipIcon="@drawable/ic_add_24px"
                        app:iconStartPadding="5dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/fragment_filter_type_1_chip"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:padding="10dp"
                        android:visibility="invisible"
                        app:chipIcon="@drawable/ic_add_24px"
                        app:iconStartPadding="5dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/fragment_filter_type_2_chip"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:padding="10dp"
                        android:visibility="invisible"
                        app:chipIcon="@drawable/ic_add_24px"
                        app:iconStartPadding="5dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/fragment_filter_type_3_chip"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:padding="10dp"
                        android:visibility="invisible"
                        app:chipIcon="@drawable/ic_add_24px"
                        app:iconStartPadding="5dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/fragment_filter_type_4_chip"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:padding="10dp"
                        android:visibility="invisible"
                        app:chipIcon="@drawable/ic_add_24px"
                        app:iconStartPadding="5dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/action_chip_type_5"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:padding="10dp"
                        android:visibility="invisible"
                        app:chipIcon="@drawable/ic_add_24px"
                        app:iconStartPadding="5dp" />

                </com.google.android.material.chip.ChipGroup>

                <TextView
                    android:id="@+id/fragment_filter_price_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fragment_filter_price_seekbar"
                    app:layout_constraintTop_toTopOf="@id/fragment_filter_price_seekbar"
                    android:layout_marginStart="@dimen/margin_normal"
                    />

                <SeekBar
                    android:id="@+id/fragment_filter_price_seekbar"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/fragment_filter_price_label_tv"
                    app:layout_constraintTop_toBottomOf="@id/fragment_filter_chipgroup" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fragment_filter_cities_textfield"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:hint="Cities"
                    app:startIconDrawable="@drawable/ic_home_24px"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fragment_filter_price_seekbar"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fragment_filter_cities_textInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fragment_filter_state_textfield"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:hint="State"
                    app:layout_constraintTop_toBottomOf="@id/fragment_filter_cities_textfield"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:startIconDrawable="@drawable/ic_home_24px">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fragment_filter_state_textInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/fragment_filter_area_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:text="Area"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fragment_filter_area_seekbar"
                    app:layout_constraintTop_toTopOf="@id/fragment_filter_area_seekbar" />

                <SeekBar
                    android:id="@+id/fragment_filter_area_seekbar"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/fragment_filter_price_label_tv"
                    app:layout_constraintTop_toBottomOf="@id/fragment_filter_state_textfield" />

                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/fragment_filter_area_pieces_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pieces"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/fragment_filter_area_pieces_picker"
                    app:layout_constraintBottom_toBottomOf="@id/fragment_filter_area_pieces_picker"
                    android:layout_marginStart="@dimen/margin_normal"
                    />

                <LinearLayout
                    android:id="@+id/fragment_filter_area_pieces_picker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_marginStart="@dimen/margin_small"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@id/fragment_filter_area_pieces_label_tv"
                    app:layout_constraintTop_toBottomOf="@id/fragment_filter_area_seekbar"
                    app:layout_constraintWidth_percent="0.3">

                    <Button
                        android:layout_marginStart="@dimen/margin_normal"
                        android:id="@+id/btn_less"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="-" />

                    <EditText
                        android:id="@+id/et_number"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:text="0"
                        android:textAlignment="center" />

                    <Button
                        android:id="@+id/btn_more"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="+" />
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fragment_search_validate_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/margin_normal"
        android:text="@string/validate"
        app:icon="@drawable/ic_done_24px"
        />
</androidx.coordinatorlayout.widget.CoordinatorLayout>