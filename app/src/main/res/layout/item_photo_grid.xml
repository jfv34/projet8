<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_photo"
    android:layout_width="200dp"
    android:layout_height="match_parent">

    <ImageView

        android:padding="5dp"
        android:id="@+id/item_photo_for_grid_photo_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <ImageView
        android:background="#ffffff"
        android:id="@+id/item_photo_for_grid_delete_iv"
        android:src="@drawable/ic_delete_24px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/item_photo_for_grid_photo_iv"
        app:layout_constraintTop_toTopOf="@id/item_photo_for_grid_photo_iv" />
</androidx.constraintlayout.widget.ConstraintLayout>

