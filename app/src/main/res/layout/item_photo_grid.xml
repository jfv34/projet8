<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_photo"
    android:layout_marginEnd="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        android:id="@+id/item_photo_for_grid_photo_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />

    <ImageView
        android:background="#ffffff"
        android:id="@+id/item_photo_for_grid_delete_iv"
        android:src="@drawable/ic_delete_24px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/item_photo_for_grid_photo_iv"
        app:layout_constraintTop_toTopOf="@id/item_photo_for_grid_photo_iv" />
</androidx.constraintlayout.widget.ConstraintLayout>

