<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:id="@+id/fragment_main_toolbar"
        app:titleTextColor="#ffffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/test_property_et"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/test_adding_property_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test insert new property" />

            <Button
                android:id="@+id/test_suppress_property_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test suppress property" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

</LinearLayout>