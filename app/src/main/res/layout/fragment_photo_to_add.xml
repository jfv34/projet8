<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fragment_photo_to_add_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fragment_photo_to_add_photoDescription_ET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/photo_description"
        app:layout_constraintEnd_toStartOf="@id/fragment_photo_to_add_photoDescription_validate_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_photo_to_add_iv" />

    <Button
        android:id="@+id/fragment_photo_to_add_photoDescription_validate_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:drawableStart="@drawable/ic_done_24px"
        android:text="@string/validate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_photo_to_add_iv" />

    <ImageButton
        android:id="@+id/fragment_photo_to_add_adding_icon"
        android:visibility="invisible"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:background="#ffffff"
        android:src="@drawable/ic_add_24px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_photo_to_add_photoDescription_ET" />

    <com.google.android.material.textview.MaterialTextView
        android:visibility="invisible"
        android:id="@+id/fragment_photo_to_add_adding_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Add another photo"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/fragment_photo_to_add_adding_icon"
        app:layout_constraintStart_toEndOf="@id/fragment_photo_to_add_validate_icon" />

    <ImageButton
        android:visibility="invisible"
        android:id="@+id/fragment_photo_to_add_validate_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:background="#ffffff"
        android:src="@drawable/ic_done_24px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_photo_to_add_adding_icon" />

    <com.google.android.material.textview.MaterialTextView
        android:visibility="invisible"
        android:id="@+id/fragment_photo_to_add_validate_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/validate"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/fragment_photo_to_add_validate_icon"
        app:layout_constraintStart_toEndOf="@id/fragment_photo_to_add_validate_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>